<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_retrofit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试Retrofit" />

        <Button
            android:id="@+id/btn_retrofit_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="get请求" />

        <Button
            android:id="@+id/btn_retrofit_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="get下载图片"
            />
        <Button
            android:id="@+id/btn_retrofit_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="get提交表单数据"
            />


        <TextView
            android:id="@+id/tv_retrofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>